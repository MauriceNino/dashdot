{
  "name": "@dashdot/server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn build:watch\" \"nodemon dist/index.cjs\"",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.cjs --sourcemap",
    "build:watch": "yarn build --watch",
    "start": "node dist/index.cjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@dashdot/common": "*",
    "@dashdot/typescript-config": "*",
    "compression": "1.8.1",
    "cors": "2.8.6",
    "cronstrue": "3.13.0",
    "dedent": "1.7.1",
    "express": "5.2.1",
    "mime-types": "3.0.2",
    "node-cron": "4.2.1",
    "rxjs": "7.8.2",
    "socket.io": "4.8.3",
    "systeminformation": "5.31.1"
  },
  "devDependencies": {
    "@types/chai": "5.2.3",
    "@types/compression": "^1",
    "@types/cors": "^2",
    "@types/express": "^5",
    "@types/jest": "30.0.0",
    "@types/mime-types": "^3",
    "@types/node": "25.3.0",
    "chai": "6.2.2",
    "concurrently": "9.2.1",
    "esbuild": "0.27.3",
    "jest": "30.2.0",
    "nodemon": "3.1.14",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
